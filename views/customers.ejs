<%- include("header"); -%>
<section id="top">
  <div class="container-fluid-customers">
  <nav class="navbar navbar-expand-lg">
   <a class="navbar-brand" href="#">
  <img class="bank-img" src="https://iconarchive.com/download/i102612/graphicloads/flat-finance/bank.ico" alt="" width="60" height="30" class="d-inline-block align-text-top">
  Saathi Bank
</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarSupportedContent">
  <ul class="navbar-nav mb-2 mb-lg-0">
    <li class="nav-item">
      <a class="nav-link active" aria-current="page" href="/">Home</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#contact">Contact</a>
    </li>
  </ul>
</div>
</nav>
</div>
</section>
<section id="customers-content">
  <h1 class="h2-about" style="font-size: 3.5rem; margin-bottom: 30px;">Customers</h1>
  <table class="table table-bordered border-danger custom-table">
  <thead class="custom-thead">
    <tr>
      <th scope="col">S No.</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Account Balance</th>
    </tr>
  </thead>
  <tbody>
    <% for(var i=0;i<CustomerList.length;i++) { %>
    <tr>
      <th scope="row"><%= i+1 %></th>
      <td><%= CustomerList[i].name %></td>
      <td><%= CustomerList[i].Email %></td>
      <td><%= CustomerList[i].activeBalance %></td>
    </tr>
    <% } %>
  </tbody>
</table>
<h2 style="color:#1F4690; font-weight:bold; font-size:3rem; text-align: left ; padding-top:5%; padding-bottom: 2%">Transfer Money</h2>
<form class="custom-form" action="/transaction" method="post">
  <div class="row mb-3">
    <label for="sender" class="col-sm-2 col-form-label">Sender</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" name="senderemail" placeholder="name@gmail.com" id="sender">
    </div>
  </div>
  <div class="row mb-3">
    <label for="receiver" class="col-sm-2 col-form-label">Receiver</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" name="receiveremail" placeholder="name@gmail.com" id="receiver">
    </div>
  </div>
  <div class="row mb-3">
    <label for="amount" class="col-sm-2 col-form-label">Amount</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" name="amount" placeholder="Type Amount" id="amount">
    </div>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Proceed</button>
</form>
</section>
<%- include("footer"); -%>
